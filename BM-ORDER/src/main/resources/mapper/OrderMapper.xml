<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.etoak.java.mapper.OrderMapper">
    <select id="getPublisherPrice" parameterType="java.lang.String" resultType="java.math.BigDecimal">
        select sum(total_price)
        from `bm-order`.`orders`
        <if test="publisher != null">
            where publisher = #{publisher}
        </if>
    </select>

    <select id="getSumPrice">
        select publisher, sum(total_price) as total_price
        from `bm-order`.`orders`
        group by publisher
    </select>
</mapper>